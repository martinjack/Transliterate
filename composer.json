{
  "name": "jackmartin/transliterate",
  "description": "Transliteration package",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Eugene Dzhumak",
      "email": "elforastero@ya.ru"
    }
  ],
  "autoload": {
    "psr-4": {
      "ElForastero\\Transliterate\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ElForastero\\Transliterate\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.1",
    "ext-intl": "*",
    "illuminate/support": "^5.5 || ^6.0 || ^7.0 || ^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "orchestra/testbench": "^4.4",
    "friendsofphp/php-cs-fixer": "^2.16",
    "brainmaestro/composer-git-hooks": "^2.8"
  },
  "extra": {
    "laravel": {
      "providers": [
        "ElForastero\\Transliterate\\ServiceProvider"
      ],
      "aliases": {
        "Transliterate": "ElForastero\\Transliterate\\Facade"
      }
    },
    "hooks": {
      "pre-commit": [
        "php-cs-fixer fix ."
      ]
    }
  },
  "scripts": {
    "test": "phpunit",
    "check-style": "php-cs-fixer fix src/ --dry-run --diff"
  }
}
